<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".ui.gardens.GardensFragment">

  <TextView
    android:id="@+id/label_gardens"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:text="@string/gardens"
    android:textAlignment="viewStart"
    android:textColor="@color/app_accent_1"
    android:padding="16dp"
    android:textSize="24sp"
    app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
    android:id="@+id/add_garden"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_margin="8dp"
    android:contentDescription="@string/add_garden_text"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:padding="8dp"
    android:src="@drawable/ic_add"
    app:tint="@color/black"/>

  <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/label_gardens"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="8dp"
    android:id="@+id/recycler_gardens"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:visibility="gone"
    app:layout_constraintTop_toBottomOf="@id/label_gardens"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="8dp"
    android:id="@+id/empty_list_gardens">

    <TextView
      android:id="@+id/no_gardens"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginTop="8dp"
      android:text="@string/no_gardens"
      android:textAlignment="center"
      android:textColor="@color/app_accent_1"
      android:padding="16dp"
      android:textSize="24sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_add_garden"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/black"
      android:textColor="@color/white"
      android:text="@string/add_button_text"
      android:layout_marginTop="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/no_gardens"
      android:layout_marginBottom="26dp"/>


  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>